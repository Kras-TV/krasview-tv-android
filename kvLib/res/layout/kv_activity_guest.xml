<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
       <LinearLayout
           android:id="@+id/kv_auth_buttons"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:orientation="horizontal"
           android:layout_alignParentBottom="true">
           
            <Button
            android:id="@+id/kv_auth_guest_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Войти как гость" 
            android:onClick="onClick"
            android:layout_weight="1"/>
           
           <Button
        	android:id="@+id/kv_auth_registration_button"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:text="Зарегистрироваться на krasview" 
        	android:onClick="onClick"
        	android:layout_weight="1"/>
           
          
           
       </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_above="@id/kv_auth_buttons"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Неавторизованный вход"         
                android:gravity="center_horizontal"/>

           
                <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text=
                "	Вы можете войти как гость, тогда вам будет недоступен просмотр телеканалов. Однако, вам будут доступны более трех тысяч сериалов и аниме, представленных на сайте krasview.ru. Если же вы хотите смотреть телевидение через это приложение, нужно зарегистрироваться на krasview." />

            
<CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Больше не показывать это сообщение" />
            

            

        </LinearLayout>
        
        



</RelativeLayout>